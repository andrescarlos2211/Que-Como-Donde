      <script>
        $(document).ready(function () {
          let url = 'https://api-qcc.onrender.com/api/v1/users';
          let opcion = null;
          let user_id, email, precio, username, profilepic, password;
          //MOSTRAR
          let tablaArticulos = $('#tablaArticulos').DataTable({
            responsive: true,
            scrollY: '50vh',
            scrollCollapse: true,
            paging: false,
            "pageLength": 1,
            "ajax": {
              "url": url,
              "dataSrc": ""
            },
            "columns": [
              { "data": "user_id" },
              { "data": "email" },
              { "data": "username" },
              { "data": "profilepic" },
              { "data": "password" },
              { "data": "isadmin" },
              { "defaultContent": "<div class='text-center'><div class='btn-group'><button class='btn btn-info btn-sm btnEditar'>Editar</button><button class='btn btn-danger btn-sm btnBorrar'>Borrar</button></div></div>" }
            ]
          });
          //CREAR
          $("#btnCrear").click(function () {
            opcion = 'crear';
            id = null;
            $("#formArticulos").trigger("reset");
            $(".modal-header").css("background-color", "#23272b");
            $(".modal-header").css("color", "white");
            $(".modal-title").text("Crear Artículo");
            $('#modalCRUD').modal('show');
          });
          //EDITAR        
          $(document).on("click", ".btnEditar", function () {
            opcion = 'editar';
            fila = $(this).closest("tr");
            user_id = parseInt(fila.find('td:eq(0)').text());
            email = fila.find('td:eq(1)').text();
            username = fila.find('td:eq(2)').text();
            profilepic = fila.find('td:eq(3)').text();
            password = fila.find('td:eq(4)').text();
            isadmin = fila.find('td:eq(5)').text();
            $("#user_id").val(user_id);
            $("#email").val(email);
            $("#username").val(username);
            $("#profilepic").val(profilepic);
            $("#password").val(password);
            $("#isadmin").val(isadmin);

            $(".modal-header").css("background-color", "#7303c0");
            $(".modal-header").css("color", "white");
            $(".modal-title").text("Editar Artículo");
            $('#modalCRUD').modal('show');
          });

          //BORRAR
          $(document).on("click", ".btnBorrar", function () {
            fila = $(this);
            id = parseInt($(this).closest('tr').find('td:eq(0)').text());
            Swal.fire({
              title: '¿Confirma eliminar el registro?',
              showCancelButton: true,
              confirmButtonText: `Confirmar`,
            }).then((result) => {
              if (result.isConfirmed) {
                $.ajax({
                  url: url + '/' + id,
                  method: 'delete',
                  data: { id: id },
                  success: function () {
                    tablaArticulos.row(fila.parents('tr')).remove().draw();
                  }
                });
                Swal.fire('¡Registro Eliminado!', '', 'success')
              }
            })
          });
          //submit para el CREAR y EDITAR
          $('#formArticulos').submit(function (e) {
            e.preventDefault();
            user_id = $.trim($('#user_id').val());
            email = $.trim($('#email').val());
            username = $.trim($('#username').val());
            profilepic = $.trim($('#profilepic').val());
            password = $.trim($('#password').val());
            isadmin = $.trim($('#isadmin').val());
            if (opcion == 'crear') {
              $.ajax({
                url: url,
                method: 'post',
                contentType: 'application/json',
                data: JSON.stringify({ email: email, username: username, profilepic: profilepic, password: password, isadmin: isadmin }),
                success: function (data) {
                  tablaArticulos.ajax.reload(null, false);
                }
              });
            }
            if (opcion == 'editar') {
              console.log("EDITAR");
              $.ajax({
                url: url + '/' + user_id,
                method: 'put',
                contentType: 'application/json',
                data: JSON.stringify({ user_id: user_id, email: email, username: username, profilepic: profilepic, password: password, isadmin: isadmin }),
                success: function (data) {
                  tablaArticulos.ajax.reload(null, false);
                }
              });
            }
            $('#modalCRUD').modal('hide');
          });
        });
      </script>




